<div class="section fullheightblock veil-collection-3-section">
    <div class="banner-image left">
      <a class="bannerbg" href="{{ section.settings.button_link }}" >
        {% if section.settings.desk_image != blank %}
          <img class="banner-desk-img lazyload" data-src="{{ section.settings.desk_image | img_url: '1728x1185' }}" src="{{ section.settings.desk_image | img_url: '100x100' }}" alt="Hourglass Cosmetics" data-bgset="{% include 'bgset', image: section.settings.desk_image %}" > 
        {% endif %}
      </a>
  	</div>
    <div class="banner-content right">
        <div class="content-inner">
          	{% if section.settings.title_sub != blank %}
            	<div class="sub-heading">{{ section.settings.title_sub | escape }}</div>
          	{% endif %}
          	{% if section.settings.heading != blank %}
            	<div class="heading">{{ section.settings.heading }}</div>
          	{% endif %}          
            {% if section.settings.button_label != blank and section.settings.button_link != blank %}
            <div class="button">
                <a href="{{ section.settings.button_link }}"> <span>{{ section.settings.button_label | escape }}</span> </a>
            </div>
            {% endif %}
        </div>
    </div>
</div>
