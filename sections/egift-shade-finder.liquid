<div class="egift-shade-finder-scn">
  <div class="egift-shade-cmn egift-shade-left">
    <div class="egift-shade-img">
      <img class="banner-desk-img lazyload" data-src="{{ section.settings.e_gift_image | img_url: 'master' }}" src="{{ section.settings.e_gift_image | img_url: '100x100' }}" alt="{{ section.settings.e_gift_title }}">
    </div>
    <div class="egift-shade-cont">
      <span class="egift-shade-title">{{ section.settings.e_gift_title }}</span>
      <span class="egift-shade-desc">{{ section.settings.e_gift_description }}</span>
      <div class="action"><a href="{{ section.settings.e_gift_link }}" class="egift-shade-btn">{{ section.settings.e_gift_button }}</a></div>
    </div>
  </div>	
    {% if section.settings.mascara_duo %}
     <div class="egift-shade-cmn egift-shade-right mascara-duo-right">
    	<div class="mascara-duo">
    <div class="mascara-duo-cur-img">
    		<img width="960" height="850" class="banner-desk-img lazyload" data-src="{{ section.settings.mascara_duo_desk_image | img_url: 'master' }}" src="{{ section.settings.mascara_duo_desk_image | img_url: '100x100' }}" alt="Mascara Duo"> 
			<img width="780" height="980" class="banner-mob-img lazyload" data-src="{{ section.settings.mascara_duo_mob_image | img_url: 'master' }}" src="{{ section.settings.mascara_duo_mob_image | img_url: '100x100' }}" alt="Mascara Duo">         
    </div>
    <div class="mascara-duo-curator-cont">
      <span class="badgelabel">{{ section.settings.limited_duo_edition }}</span>
      <span class="mascara-title">{{ section.settings.mascara_duo_title }}</span>
      <span class="mascara-des">{{ section.settings.mascara_duo_description }}</span>
      <div class="mascara-value">{{ section.settings.duo_value }}</div>
      <a href="{{ section.settings.mascara_duo_button_link }}" class="show-now-btn">{{ section.settings.mascara_duo_button_label }}</a> 
    </div>	
  </div>
     </div>  
    {% else %}
    <div class="egift-shade-cmn egift-shade-right">
     <div class="egift-shade-img">
      <img class="banner-desk-img lazyload" data-src="{{ section.settings.shade_finder_image | img_url: 'master' }}" src="{{ section.settings.shade_finder_image | img_url: '100x100' }}" alt="{{ section.settings.shade_finder_title }}">
      <img class="banner-mob-img lazyload" data-src="{{ section.settings.shade_finder_mob_image | img_url: 'master' }}" src="{{ section.settings.shade_finder_mob_image | img_url: '100x100' }}" alt="{{ section.settings.shade_finder_title }}">
    </div>
    <div class="egift-shade-cont">
      <span class="egift-shade-title">{{ section.settings.shade_finder_title }}</span>
      <span class="egift-shade-desc">{{ section.settings.shade_finder_description }}</span>
      <div class="action"><a href="{{ section.settings.shade_finder_link }}" class="egift-shade-btn">{{ section.settings.shade_finder_button }}</a></div>
    </div>
    </div>
    {% endif %}
  
</div>

