                     var id = $(this).attr("data-thumbnail-id");  var src = $("#FeaturedImageZoom-product-template-"+id+" iframe").attr("video-src") +"&autoplay=1&loop=1"; $("#FeaturedImageZoom-product-template-"+id+" iframe").attr("src",src);    
