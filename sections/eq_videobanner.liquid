<div class="eq_video_banner">
  <div class="page-content">    
    <div class="video-section">      
      <video class="mobile_view" width="100%" playsinline loop muted autoplay>  
        <source src="{{ section.settings.mobile_video_url }}" type="video/mp4">  
      </video> 
      <video class="desktop_view" width="100%" playsinline loop muted autoplay>  
        <source src="{{ section.settings.desktop_video_url }}" type="video/mp4">  
      </video> 
    </div>
    <div class="video-content-area">
      <div class="container">            
          <div class="content">
            {% if section.settings.video_logo_image != blank %}
            	<img class="video-image lazyload" src="{{ section.settings.video_logo_image| img_url : '100x' }}" data-src="{{ section.settings.video_logo_image| img_url : 'master' }}" alt="{{ section.settings.vanish_image.alt }}">
            {% endif %} 
            {% if section.settings.button_label != blank %}
            	<a class="video-btn" href="{{ section.settings.button_link }}">{{ section.settings.button_label }}</a>
            {% endif %} 
          </div>
      </div>
    </div>
  </div>
</div>

