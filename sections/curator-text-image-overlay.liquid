<div class="curator_text_image_overlay">
  <div class="left-section">
    <div class="content-inner">      
       
    <!--img class="left_image lazyload" data-src="{{ section.settings.left_image | img_url: 'master' }}" src="{{ section.settings.left_image | img_url: '100x' }}" alt="{{ section.settings.title }}"-->
        
        <video class="left_image desktop_view" width="100%" playsinline loop muted autoplay >  
        <source src="{{ section.settings.desktop_video_url }}" type="video/mp4">
        </video>
        <video class="bg-image mobile_view" width="100%" playsinline loop muted autoplay>  
          <source src="{{ section.settings.mobile_video_url }}" type="video/mp4">  
        </video>
        <div class="choose-changes-cont">
        {% if section.settings.title != blank %}
        <div class="title">{{ section.settings.title }}</div>
        {% endif %}    

        {% if section.settings.subtitle != blank %}
        <div class="subtitle">{{ section.settings.subtitle }}</div>
        {% endif %}  
        
        {% if  section.settings.curator_btn_label != blank and  section.settings.curator_btn_link != blank %}
         <div class="button"><a href="{{  section.settings.curator_btn_link }}">{{  section.settings.curator_btn_label }}</a></div>
        {% endif %}
          
      </div>
      
        
    </div>
  </div> 
  
 <div class="right-section">
    <div class="banner-content {{ section.settings.content_position }} curator-content-{{ section.settings.position }}">
      <div class="content-inner"> 
        <div class="pre-curated-cont">         
          {% if section.settings.right_title1 != blank %}
          <div class="right_title1">{{ section.settings.right_title1 }}</div>
          {% endif %} 
          {% if section.settings.right_description != blank %}
          <div class="right_description">{{ section.settings.right_description }}</div>
          {% endif %}     
          {% if  section.settings.btn_label != blank and  section.settings.btn_link != blank %}
          <div class="button"><a href="{{  section.settings.btn_link }}">{{  section.settings.btn_label }}</a></div>
          {% endif %} 
        </div>
        <div class="right-panel-img">
        {% if section.settings.right_desk_image != blank or section.settings.right_mob_image != blank  %}
          <img class="desktop_view lazyload" width="668" height="798" data-src="{{ section.settings.right_desk_image | img_url: 'master' }}" src="{{ section.settings.right_desk_image | img_url: '100x' }}" alt="{{ section.settings.right_title1 }}">
          <img class="mobile_view lazyload" width="414" height="480" data-src="{{ section.settings.right_mob_image | img_url: 'master' }}" src="{{ section.settings.right_mob_image | img_url: '100x' }}" alt="{{ section.settings.right_title1 }}">
        {% endif %}
        </div>
        
        <div class="left-panel-img">
           {% if section.settings.left_desk_image != blank or section.settings.left_mob_image != blank  %}
              <img class="desktop_view lazyload" width="668" height="798" data-src="{{ section.settings.left_desk_image | img_url: 'master' }}" src="{{ section.settings.left_desk_image | img_url: '100x' }}" alt="{{ section.settings.right_title1 }}">
              <img class="mobile_view lazyload" width="414" height="480" data-src="{{ section.settings.left_mob_image | img_url: 'master' }}" src="{{ section.settings.left_mob_image | img_url: '100x' }}" alt="{{ section.settings.right_title1 }}">
            {% endif %}
        </div>
      </div>
    </div>
  </div>  
</div>

<script>
  $(window).on('load', function(){
    var mobile_view = $('.mobile_lazyload').data('src');
    var desktop_view = $('.desktop_lazyload').data('src');
    $('.mobile_lazyload').attr('src',mobile_view);
    $('.desktop_lazyload').attr('src',desktop_view);
  });
</script>

