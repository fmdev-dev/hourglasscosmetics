<div class="vanish-home-bnr-2">
  <div class="page-vanish-home-content-2">
    <div class="vanish-home-detail-2">
      <span class="vch2-heading-txt">{{ section.settings.heading }}</span> 
      {% if section.settings.vanish_image != blank %}
      <img class="vch2-image" src="{{ section.settings.vanish_image| img_url : 'master' }}" alt="{{ section.settings.vanish_image.alt }}">
      {% endif %}  
      <div class="vch2-show-btn">	
        <a class="vch2-btn" href="{{ section.settings.button_link }}">{{ section.settings.button_label }}</a>
      </div>
    </div>       
    <div class="vch2-image-section">        
      {% if section.settings.desktop_image != blank %}
      <img class="vch2-desktop-image" src="{{ section.settings.desktop_image| img_url : 'master' }}" alt="{{ section.settings.desktop_image.alt }}">
      {% endif %}         
      {% if section.settings.mobile_image != blank %}
      <img class="vch2-mobile-image" src="{{ section.settings.mobile_image| img_url : 'master' }}" alt="{{ section.settings.mobile_image.alt }}">
      {% endif %}  
    </div>
  </div>
</div>

