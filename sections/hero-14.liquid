<div class="vanish-concealer-home-bnr">
  <div class="page-vanish-concealer-home-content">
    <div class="vanish-concealer-home-detail">
      <div class="vch-overlay">
        <span class="vch-heading-txt">{{ section.settings.heading }}</span> 
        {% if section.settings.vanish_image != blank %}
        <img class="vch-image" src="{{ section.settings.vanish_image| img_url : 'master' }}" alt="{{ section.settings.vanish_image.alt }}">
        {% endif %}  
        <div class="vch-show-learn-btn">	
        <a class="vch-btn-1" href="{{ section.settings.button_link_1 }}">{{ section.settings.button_label_1 }}</a>
        <a class="vch-btn-2" href="{{ section.settings.button_link_2 }}">{{ section.settings.button_label_2 }}</a>
          </div>
      </div>       
      <div class="vch-image-vimeo">        
      	<video id="vch-video" width="100%" class="vimiovideo vch-image-mobile" src="{{ section.settings.video_url }}"  playsinline="" autoplay="" loop="" muted="" ></video>
      </div>
    </div>
  </div>
</div>

