<div id="shopify-section-findarch" class="shopify-section find-your-arch">
    <div class="arch-info">
        {% if section.settings.heading != blank %}
        <h2>{{ section.settings.heading }}</h2>
        {% endif %}
        {% if section.settings.text != blank %}
        <p>{{ section.settings.text }}</p>
        {% endif %}
    </div>
    <div class="find-your-arch-list">
    {% for block in section.blocks limit: section.blocks.size %}
        <div class="find-arch-item">
            <div class="find-arch-img">
              {% comment %}
                <!--img src="{% if block.settings.gifurl != '' %}{{block.settings.gifurl}}{% endif %}" alt="{{ section.settings.heading }}" /   https://cdn.shopify.com/s/files/1/0016/7116/8064/t/7/assets/find-your-arch-1.jpg -->
                 <video width="100%" autoplay loop>
                  <source src="{{ block.settings.gifurl }}"  type="video/mp4" >
                </video>
              {% endcomment %}
              <img class="lazyload" data-src="{{ block.settings.gifurl }}" src="{{ block.settings.gifimage1 | img_url: '100x100' }}" alt="Hourglass Cosmetics" />
                
            </div>
            <div class="find-arch-sublist">
                {% if block.settings.image1 != blank %}
                <div class="find-arch-subitem">
                    {% if block.settings.image1 != blank %}
                    <div class="f-arch-subitem-img"><img class="lazyload" data-src="{{ block.settings.image1 | img_url : '67x213' }}" src="{{ block.settings.image1 | img_url : '1x1' }}" alt="{{ block.settings.image1.alt }}" /></div>
                    {% endif %}
                    {% if block.settings.subitem_title1 != blank or block.settings.subsubitem_title21 != blank or block.settings.text1 != blank %}
                    <div class="farch-subitem-cont">
                        {% if block.settings.subitem_title1 != blank or block.settings.subsubitem_title21 != blank %}
                        <div class="farch-subitem-title">{% if block.settings.subitem_title1 != blank%}{{block.settings.subitem_title1}}{% endif %} {% if block.settings.subsubitem_title21 != blank%}<br>{{block.settings.subsubitem_title21}}{% endif %}</div>
                        {% endif %}
                        {% if block.settings.text1 != blank %}
                        <span class="farch-subitem-txt">{{block.settings.text1}}</span>
                        {% endif %}
                        {% comment %}<a target="_blank" href="https://www.hourglasscosmetics.com/products/{{block.settings.product_id1}}" class="farch-quick-view" >Add to cart</a>{% endcomment %}
                        <a href="#" class="farch-quick-view arch-quick" data-handle="{{block.settings.product_id1}}">Quick View</a>
                    </div>
                    {% endif %}
                </div>
                {% endif %}

                {% if block.settings.image2 != blank %}
                <div class="find-arch-subitem">
                    {% if block.settings.image2 != blank %}
                    <div class="f-arch-subitem-img"><img class="lazyload" data-src="{{ block.settings.image2 | img_url : '67x213' }}" src="{{ block.settings.image2 | img_url : '1x1' }}" alt="{{ block.settings.image2.alt }}" /></div>
                    {% endif %}
                    {% if block.settings.subitem_title2 != blank or block.settings.subsubitem_title22 != blank or block.settings.text2 != blank %}
                    <div class="farch-subitem-cont">
                        {% if block.settings.subitem_title2 != blank or block.settings.subsubitem_title22 != blank %}
                        <div class="farch-subitem-title">{% if block.settings.subitem_title2 != blank%}{{block.settings.subitem_title2}}{% endif %} {% if block.settings.subsubitem_title22 != blank%}<br>{{block.settings.subsubitem_title22}}{% endif %}</div>
                        {% endif %}
                        {% if block.settings.text2 != blank %}
                        <span class="farch-subitem-txt">{{block.settings.text2}}</span>
                        {% endif %}
                        {% comment %}<a target="_blank" href="https://www.hourglasscosmetics.com/products/{{block.settings.product_id2}}" class="farch-quick-view" >Add to cart</a>{% endcomment %}
                        <a href="#" class="farch-quick-view arch-quick" data-handle="{{block.settings.product_id2}}">Quick View</a>
                    </div>
                    {% endif %}
                </div>
                {% endif %}

                {% if block.settings.image3 != blank %}
                <div class="find-arch-subitem">
                    {% if block.settings.image3 != blank %}
                    <div class="f-arch-subitem-img"><img class="lazyload" data-src="{{ block.settings.image3 | img_url : '67x213' }}" src="{{ block.settings.image3 | img_url : '1x1' }}" alt="{{ block.settings.image3.alt }}" /></div>
                    {% endif %}
                    {% if block.settings.subitem_title3 != blank or block.settings.subsubitem_title23 != blank or block.settings.text3 != blank %}
                    <div class="farch-subitem-cont">
                        {% if block.settings.subitem_title3 != blank or block.settings.subsubitem_title23 != blank %}
                        <div class="farch-subitem-title">{% if block.settings.subitem_title3 != blank%}{{block.settings.subitem_title3}}{% endif %} {% if block.settings.subsubitem_title23 != blank%}<br>{{block.settings.subsubitem_title23}}{% endif %}</div>
                        {% endif %}
                        {% if block.settings.text3 != blank %}
                        <span class="farch-subitem-txt">{{block.settings.text3}}</span>
                        {% endif %}
                        {% comment %}<a target="_blank" href="https://www.hourglasscosmetics.com/products/{{block.settings.product_id3}}" class="farch-quick-view" >Add to cart</a>{% endcomment %}
                        <a href="#" class="farch-quick-view arch-quick" data-handle="{{block.settings.product_id3}}">Quick View</a>
                    </div>
                    {% endif %}
                </div>
                {% endif %}
            </div>
        </div>
    {% endfor %}
    </div>
</div>
