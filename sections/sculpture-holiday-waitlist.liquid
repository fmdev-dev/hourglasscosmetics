		{
          "type": "image_picker",
          "id": "desktop_image",
          "label": {
            "en": "Desktop image",
            "de": "Desktop image",
            "fr": "Desktop image"
          }
        },
		{
           "type":"text",
           "id":"coming_soon",
           "label":{
              "en":"Coming soon title",
              "de":"Coming soon title",
              "fr":"Coming soon title"
           }
        },
		{
          "type": "image_picker",
          "id": "badge_image",
          "label": {
            "en": "Badge image",
            "de": "Badge image",
            "fr": "Badge image"
          }
        },
		{
           "type":"text",
           "id":"title",
           "label":{ 
              "en":"Title",
              "de":"Title",
              "fr":"Title"
           }
        },
		{
           "type":"text",
           "id":"description",
