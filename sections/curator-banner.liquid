<div class="curator-bnr">
  <div class="curator-left"> 
  <img class="banner-mob-img lazyload" width="414" height="320" data-src="{{ section.settings.fmob_image | img_url: 'master' }}" src="{{ section.settings.fmob_image | img_url: '100x100' }}" alt="Hourglass Cosmetics"
              {% if section.settings.mob_image %}
                data-bgset="{% include 'bgset', image: section.settings.mob_image %}"
              {% endif %}> 
  
      {% if section.settings.fdesk_image != blank %}
        <img class="banner-desk-img lazyload" width="666" height="720"  data-src="{{ section.settings.fdesk_image | img_url: 'master' }}" src="{{ section.settings.fdesk_image | img_url: '100x100' }}" alt="Hourglass Cosmetics"
        {% if section.settings.fdesk_image %}
          data-bgset="{% include 'bgset', image: section.settings.fdesk_image %}"
        {% endif %}> 
      {% endif %}
  </div>
  
    <div class="curator-content curator-center">
        <div class="content-inner">          
            {% if section.settings.fbadge != blank %}
            <div class="badge">{{ section.settings.fbadge }}</div>
            {% endif %}    
                 
            {% if section.settings.title != blank %}
            <div class="title">{{ section.settings.title }}</div>
            <!--strong class="discountoff">{{section.settings.off}}</strong-->
            {% endif %}    
          
            {% if section.settings.subtitle != blank %}
            <div class="subtitle">{{ section.settings.subtitle }}</div>
            {% endif %}           
          
          
            {% if section.settings.description != blank %}
            <div class="description">{{ section.settings.description }}</div>
            {% endif %} 
          
            {% if section.settings.button_label != blank and section.settings.button_link != blank %}
            <div class="actions">
                <a href="{{ section.settings.button_link }}"> <span>{{ section.settings.button_label | escape }}</span> </a>
            </div>
            {% endif %}
          
             
            
          
        </div>
    </div>
  <div class="curator-right">
    {% if section.settings.fdesk_image1 != blank %}
          <img class="banner-desk-img lazyload" width="645" height="720" data-src="{{ section.settings.fdesk_image1 | img_url: 'master' }}" src="{{ section.settings.fdesk_image1 | img_url: '100x100' }}" alt="Hourglass Cosmetics"
          {% if section.settings.fdesk_image1 %}
            data-bgset="{% include 'bgset', image: section.settings.fdesk_image1 %}"
          {% endif %}> 
        {% endif %}
  </div>
</div>
