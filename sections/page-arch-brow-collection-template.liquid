<div id="shopify-section-collection" class="shopify-section arch-brow-collection">
    <div class="container-fix">
        <div class="arch-info">
			<h1 class="requiredtag"></h1>
            {% if section.settings.heading != blank %}
            <h2>{{ section.settings.heading }}</h2>
            {% endif %}
            {% if section.settings.text != blank %}
            <p>{{ section.settings.text }}</p>
            {% endif %}
        </div>
        <div class="arch-brow-list">
         {% for block in section.blocks limit: section.blocks.size %}
            <div class="arch-brow-c-item">
                <div class="arch-brow-c-cont">
                    <h3>{{block.settings.title}}</h3>
                    <span class="arch-brow-label">{% if block.settings.new_enable %}New{% endif %}</span>
                    <span class="arch-brow-info">{% if block.settings.heading != '' %}{{block.settings.heading}}{% endif %}</span>
                    {% if block.settings.description != '' %}{{block.settings.description}}{% endif %}
                    <span class="arch-price">${% if block.settings.price != '' %}{{block.settings.price}}{% endif %}</span>
                </div>
                {% if block.settings.desk_image != blank %}
                <div class="arch-coll-img">
                     <img class="lazyload" data-src="{{ block.settings.desk_image | img_url : '397x515' }}" src="{{ block.settings.desk_image | img_url : '100x100' }}" alt="{{ block.settings.desk_image.alt }}" />
                </div>
                {% endif %}
              
               {% assign producthandle = block.settings.product_handle %}
              
             {% comment %}
              
                {% if block.settings.product_id != blank %}
                  {% assign producthandle = '' %}
                  {% if block.settings.product_id == '3734518300736' %}
                     {% assign producthandle = 'arch-brow-sculpting-pencil' %}
                  {% endif %}
                  {% if block.settings.product_id == '3880417263680' %}
                     {% assign producthandle = 'arch-brow-micro-sculpting-pencil' %}
                  {% endif %}
                  {% if block.settings.product_id == '3734519971904' %}
                     {% assign producthandle = 'arch-brow-volumizing-fiber-gel' %}
                  {% endif %}
                  {% if block.settings.product_id == '3734516334656' %}
                     {% assign producthandle = 'arch-brow-shaping-gel' %}
                  {% endif %}
                  {% if producthandle != blank %}
                     {% assign product = all_products[producthandle] %}
                     {% include 'product-addtocart', product: product %}
                  {% endif %}
                {% endif %}
              
              {% endcomment %}
              
              
               {% if producthandle != blank %}
                     {% assign product = all_products[producthandle] %}
                     {% include 'product-addtocart', product: product %}
               {% endif %} 
              
            </div>
         {% endfor %}
        </div>
    </div>
</div>
{% schema %}
{
   "name":{
      "de":"Collection Section",
      "en":"Collection Section",
      "fr":"Collection Section"
   },
   "class":"pickuplocation-list-section",
   "max_blocks":6,
   "settings":[
      {
         "type":"text",
         "id":"heading",
         "label":{
            "en":"Heading",
            "de":"Titel",
            "fr":"En-tête"
         },
         "default":{
            "en":"THE ARCH™ BROW COLLECTION",
            "de":"THE ARCH™ BROW COLLECTION",
            "fr":"THE ARCH™ BROW COLLECTION"
         }
      },
      {
         "type":"text",
         "id":"text",
         "label":{
            "en":"Text",
            "de":"Text",
            "fr":"Text"
         },
         "default":{
            "en":"Embrace your brow and enhance your arcn for a look that’s natural, not forced",
            "de":"Embrace your brow and enhance your arcn for a look that’s natural, not forced",
            "fr":"Embrace your brow and enhance your arcn for a look that’s natural, not forced"
         }
      }
   ],
   "presets":[
      {
         "name":{
            "de":"collection_section",
            "en":"collection_section",
            "fr":"collection_section"
         },
         "category":{
            "de":"Collections",
            "en":"Collections",
            "fr":"Collections"
         },
         "blocks":[
            {
               "type":"collectionsection"
            },
            {
               "type":"collectionsection"
            }
         ]
      }
   ],
   "blocks":[
      {
         "type":"collectionsection",
         "name":{
            "de":"collection_section",
            "en":"collection_section",
            "fr":"collection_section"
         },
         "settings":[
            {
               "id":"title",
               "type":"text",
               "label":"Title"
            },
            {
               "type": "checkbox",
               "id": "new_enable",
               "label": "New Label",
               "default":   false,
               "info": "Check for enable New Label"
            },
            {
               "id":"heading",
               "type":"text",
               "label":"Heading"
            },
            {
               "id":"description",
               "type":"richtext",
               "label":{
                  "en":"Description",
                  "de":"Description",
                  "fr":"Description"
               }
            },
            {
               "id":"price",
               "type":"text",
               "label":"Price"
            },
            {
               "type":"image_picker",
               "id":"desk_image",
               "label":{
                  "en":"Product Image",
                  "de":"Product Image",
                  "fr":"Product Image"
               }
            },
            {
               "id":"product_id",
               "type":"text",
               "label":"Product Id"
            },
            {
               "id":"product_handle",
