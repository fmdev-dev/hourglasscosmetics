<div class="eq_content_image_section">

    {% for block in section.blocks %}
		<div class="eq_content_blocks_wrapper eq_block_{{forloop.index}} feature-row">
          {% if block.settings.layout == 'left' %}
            <div class="grid__item feature-row__item medium-up--one-half left_image_section">
              <div class="content-inner">
                {% if block.settings.sec2_link != blank %}<a href="{{ block.settings.sec2_link }}">{% endif %}
                {% if block.settings.sec2_image != blank %}<img class=" lazyload" data-src="{{ block.settings.sec2_image | img_url: 'master' }}" src="{{ block.settings.sec2_image | img_url: '100x' }}" alt="Hourglass Cosmetics">{% endif %}
                {% if block.settings.sec2_link != blank %}</a>{% endif %}
              </div>
            </div>
          {% endif %} 

          <div class="grid__item feature-row__item lp_content_left-section medium-up--one-half image_and_content_section">
            <div class="content-inner">  
                {% if block.settings.sec1_link != blank %}<a href="{{ block.settings.sec1_link }}">{% endif %}
                  {% if block.settings.desktop_video_url != blank %}
                    <video class="video_desktop_grid" width="100%" playsinline loop muted autoplay>  
                      <source src="{{ block.settings.desktop_video_url }}" type="video/mp4">  
                    </video> 
                  {% endif %}
                  {% if block.settings.mobile_video_url != blank %}
                    <video class="video_mobile_grid" width="100%" playsinline loop muted autoplay>  
                      <source src="{{ block.settings.mobile_video_url }}" type="video/mp4">  
                    </video> 
                  {% endif %}
              	{% if block.settings.sec1_link != blank %}</a>{% endif %}
                {% if block.settings.sec1_description != blank %}
                  <div class="description">{{ block.settings.sec1_description }}</div>
                {% endif %} 
            </div>
          </div> 

          {% if block.settings.layout == 'right' %}
            <div class="grid__item feature-row__item medium-up--one-half right_image_section">
              <div class="content-inner">
				{% if block.settings.sec2_link != blank %}<a href="{{ block.settings.sec2_link }}">{% endif %}
                	{% if block.settings.sec2_image != blank %}<img class=" lazyload" data-src="{{ block.settings.sec2_image | img_url: 'master' }}" src="{{ block.settings.sec2_image | img_url: '100x' }}" alt="Hourglass Cosmetics">{% endif %}
                {% if block.settings.sec2_link != blank %}</a>{% endif %}
              </div>
            </div>
          {% endif %} 
  		</div>
    {% endfor %}
  
</div>

{% schema %}
{
    "name": {
      "en": "EQ Content & Image"     
    },
    "blocks": [           
      {
        "type": "text",
        "name": "Product",
        "settings": [ 
          {
            "type": "header",
            "content": " Position Setting"
          },
          {
            "type": "select",
            "id": "layout",
            "label": {  "en": "Image alignment" },
            "default": "left",
            "options": [
              {
                "label": { "en": "Left" },
                "value": "left"
              },                    
              {
                "label": { "en": "Right" },
                "value": "right"
              }
            ]
          },
          {
            "type": "header",
            "content": "Content with Video"
          },
          {
            "type":"url",
            "id":"desktop_video_url",
            "label":{
              "en":"Desktop Video URL"               
            }
          },
          {
            "type":"url",
            "id":"mobile_video_url",
            "label":{
              "en":"Mobile Video URL"               
            }
          },	     
          {
            "type": "textarea",
            "id": "sec1_description",
            "label": {
              "en": "Description"
            }
          },  
          {
            "type": "url",
            "id": "sec1_link",
            "label": {
              "en": "Link"         
            }
          },
          {
            "type": "header",
            "content": "Image Section"
          },
          {
            "type": "image_picker",
            "id": "sec2_image",
            "label": {
              "en": "Image"
            }
          }, 
          {
            "type": "url",
            "id": "sec2_link",
            "label": {
              "en": "Link"         
            }
          }
      ]
    }
  ]
}
{% endschema %}
