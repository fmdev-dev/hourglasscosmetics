<div id="shopify-section-browfinder" class="shopify-section brow-finder-scn">
    <div class="container-fix">
        <div class="brow-finder-dtl">
            <div class="brow-finder-img">
              {% if section.settings.image != blank %}
                 <img class="lazyload" data-src="{{ section.settings.image | img_url : '701x298' }}" src="{{ section.settings.image | img_url : '50x50' }}" alt="{{ section.settings.image.alt }}" />
              {% endif %}
            </div>
            <div class="brow-finder-cont">
                <h3>{{ section.settings.title }}</h3>
                <span class="c-your-cl">{{ section.settings.heading }}</span>
               
                {% if section.settings.button_label != blank and section.settings.button_link != blank %} 
                  <a href="{{ section.settings.button_link }}" class="takethe-quiz">{{ section.settings.button_label }}</a>
                {% endif %}

            </div>
        </div>
    </div>
</div>
{% schema %}
  {
    "name": {
      "en": "Brow Finder Section",
      "de": "Brow Finder Section",
      "fr": "Brow Finder Section"
    },
    "settings": [
	    {
        "type": "text", 
        "id": "title",
        "label": {
          "en": "Title",
          "de": "Title",
          "fr": "Title"
        }
      },      
      {
        "type": "text",
        "id": "heading",
        "label": {
          "en": "Heading",
          "de": "Heading",
          "fr": "Heading"
        }
      },     
      {
        "type": "text",
        "id": "button_label",
        "label": {
          "en": "Button Label",
          "de": "Button Label",
          "fr": "Button Label"
        }
      },   
      {
        "type": "url",
        "id": "button_link",
        "label": {
          "en": "Button Link",
          "de": "Button Link",
          "fr": "Button Link"
        }
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": {
          "en": "Image",
          "de": "Image",
          "fr": "Image"
        }
      }
    ]
  }
{% endschema %}