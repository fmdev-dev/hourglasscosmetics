          ]
        },
		{
          "type": "text",
          "id": "popup_subtitle",
          "label": {
          "en": "Subtitle",
          "de": "Subtitle",
          "fr": "Subtitle"
          }
        },
		{
          "type": "text",
          "id": "popup_title",
          "label": {
          "en": "Title",
          "de": "Title",
          "fr": "Title"
          }
        },
		{
          "type": "textarea",
          "id": "popup_description",
          "label": {
          "en": "Description",
          "de": "Description",
          "fr": "Description"
          }
        },
		{
          "type": "text",
          "id": "popup_btn_label",
          "label": {
          "en": "Button Label",
          "de": "Button Label",
          "fr": "Button Label"
          }
        },
		{
          "type": "url",
          "id": "popup_btn_link",
          "label": {
          "en": "Button Link",
          "de": "Button Link",
          "fr": "Button Link"
          }
        }

      ]
     }
    ]
  }
