<div class="mascara-duo-curator-scn">
  <div class="mascara-duo-curator-left">
    <div class="mascara-duo-cur-img">
    		<img width="960" height="850" class="banner-desk-img lazyload" data-src="{{ section.settings.mascara_desk_image | img_url: 'master' }}" src="{{ section.settings.mascara_desk_image | img_url: '100x100' }}" alt="Mascara Duo"> 
			<img width="780" height="980" class="banner-mob-img lazyload" data-src="{{ section.settings.mascara_mob_image | img_url: 'master' }}" src="{{ section.settings.mascara_mob_image | img_url: '100x100' }}" alt="Mascara Duo">         
    </div>
    <div class="mascara-duo-curator-cont">
      <span class="badgelabel">{{ section.settings.limited_edition }}</span>
      <span class="mascara-title">{{ section.settings.mascara_title }}</span>
      <span class="mascara-des">{{ section.settings.mascara_description }}</span>
      <div class="mascara-value">{{ section.settings.value }}</div>
      <a href="{{ section.settings.mascara_button_link }}" class="show-now-btn">{{ section.settings.mascara_button_label }}</a> 
    </div>	
  </div>
  <div class="mascara-duo-curator-right">
  	<div class="mascara-duo-cur-img">
    		<img width="936" height="843" class="banner-desk-img lazyload" data-src="{{ section.settings.curator_desk_image | img_url: 'master' }}" src="{{ section.settings.curator_desk_image | img_url: '100x100' }}" alt="Mascara Duo"> 
			<img width="583" height="554" class="banner-mob-img lazyload" data-src="{{ section.settings.curator_mob_image | img_url: 'master' }}" src="{{ section.settings.curator_mob_image | img_url: '100x100' }}" alt="Mascara Duo">         
    </div>
    <div class="mascara-duo-curator-cont">
      <span class="mascara-title">{{ section.settings.curator_title }}</span>
      <span class="mascara-sub-title">{{ section.settings.curator_sub_title }}</span>
      <span class="mascara-des">{{ section.settings.curator_description }}</span>
      <a href="{{ section.settings.curator_button_link }}" class="show-now-btn">{{ section.settings.curator_button_label }}</a> 
    </div>
  </div>
</div>

