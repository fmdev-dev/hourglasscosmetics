  {
    "name": {
      "en": "Left image right contect",
      "de": "Left image right contect",
      "fr": "Left image right contect"
    },
    "settings": [
	  {
        "type": "image_picker",
        "id": "image1",
        "label": "Image 1"
      },
	  {
        "type": "text",
        "id": "title",
        "label": "Heading"
      },
	  {
        "type": "textarea",
        "id": "text1",
        "label": "Text 1"
      },
	  {
        "type": "text",
        "id": "text2",
        "label": "Text 2"
      },      
	  {
        "type": "image_picker",
        "id": "image2",
        "label": "Image 2"
      },
	  {
        "type": "text",
        "id": "title2",
        "label": "Title"
      },
	  {
        "type": "text",
        "id": "new_title",
        "label": "New Title"
      },
	  {
        "type": "text",
        "id": "btn_label",
        "label": "Button Link"
      },
	  {
        "type": "url",
        "id": "btn_link",
        "label": "Button URL"
      }
    ]

  }
{% endschema %}
