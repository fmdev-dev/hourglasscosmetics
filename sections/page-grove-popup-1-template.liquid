 

<div class="grove-popup-first">
	<div class="grove-popup-f-img"><img src="{{ section.settings.image1 | img_url: '618x862' }}" alt="{{ section.settings.title }}" /></div>
	<div class="grove-popup-f-cont">
	<div class="grovepopup-f-top">
	<h2>{{ section.settings.title }}</h2>
	<p>{{ section.settings.text1 }} <strong>{{ section.settings.text2 }}</strong></p>
	</div>
	<div class="arch-s-pencil" style="background-image: url('{{ section.settings.image2 | img_url: '804x300' }}');">
	<div class="arch-s-pencil-cont"><span class="arch-s-pencil-new">{{ section.settings.new_title }}</span> <span class="arch-s-pencil-title">{{ section.settings.title2 }}</span></div>
	<a href="{{ section.settings.btn_link }}" class="pencil-lorem-more">{{ section.settings.btn_label }}</a></div>
	</div>
</div>



