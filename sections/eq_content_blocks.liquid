<div class="eq_content_blocks_wrap">
  <div class="left_section">
    <div class="content">
      <a href="{{ section.settings.product_link }}">
        {% if section.settings.desktop_video_url != blank %}
          <video class="video_desktop_grid" width="100%" playsinline loop muted autoplay>  
            <source src="{{ section.settings.desktop_video_url }}" type="video/mp4">  
          </video> 
		{% endif %}
        {% if section.settings.mobile_video_url != blank %}
          <video class="video_mobile_grid" width="100%" playsinline loop muted autoplay>  
            <source src="{{ section.settings.mobile_video_url }}" type="video/mp4">  
          </video> 
		{% endif %}
      </a>
      {% if section.settings.section_title != blank %}
      <div class="section-description">
        {% if section.settings.description != blank %}
        <div class="description">
          {% if section.settings.section_title != blank %}
            <div class="section-title">{{ section.settings.section_title }}</div>
            {% endif %}
            {% if section.settings.section_header_text != blank %}
            <div class="section-header">{{ section.settings.section_header_text }}</div>
           {% endif %}
          <span class="desc-txt">{{ section.settings.description }}</span></div>
        {% endif %}
      </div>
      {% endif %}
    </div>
  </div>    
  <div class="right_section">
    <div class="content">        
      {% if section.settings.right_image != blank %}
        <a href="{{ section.settings.right_link }}">
          <img class=" lazyload" data-src="{{ section.settings.right_image | img_url: 'master' }}" src="{{ section.settings.right_image | img_url: 'master' }}" alt="Hourglass Cosmetics">
        </a>
      {% endif %}  
    </div>
  </div>  
</div>

