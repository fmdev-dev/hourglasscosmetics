<div id="section11" class="section fullheightblock ambient-banner section-align-right archbrow-section unlocked-scn">
  	{% if section.settings.desk_link != blank %}
    <a class="bannerbg" href="{{ section.settings.desk_link }}" >
      {% if section.settings.desk_image != blank %}
      	<img class="banner-desk-img lazyload" data-src="{{ section.settings.desk_image | img_url: '1728x1185' }}" src="{{ section.settings.desk_image | img_url: '100x100' }}" alt="Hourglass Cosmetics"
        {% if section.settings.desk_image %}
          data-bgset="{% include 'bgset', image: section.settings.desk_image %}"
        {% endif %}
        > 
      {% endif %}
  	</a>
  	{% endif %}
    <div class="banner-content">
        <div class="content-inner">
          	{% if section.settings.title_sub != blank %}
            <h2>{{ section.settings.title_sub | escape }}</h2>
          	{% endif %}
          	{% if section.settings.title1 != blank or section.settings.title2 != blank %}
            <h3>{% if section.settings.title1 != blank %}{{ section.settings.title1 | escape }}<br>{% endif %}{{ section.settings.title2 | escape }}</h3>
          	{% endif %}
            {% if section.settings.ghost_image != blank %}
              {% assign gifimg = section.settings.ghost_image %}
          	  <img class="ghost-mob-img lazyload" data-src="{{ gifimg | asset_url }}" src="{{ gifimg | asset_url }}" alt="Hourglass Cosmetics">
            {% endif %}          
          	{% if section.settings.heading != blank %}
            <h3>{{ section.settings.heading | escape }}</h3>
          	{% endif %}
            {% if section.settings.mob_image != blank %}
            <img class="banner-mob-img lazyload" data-src="{{ section.settings.mob_image | img_url: 'large' }}" src="{{ section.settings.mob_image | img_url: '10x10' }}" alt="Hourglass Cosmetics"
            {% if section.settings.mob_image %}
                data-bgset="{% include 'bgset', image: section.settings.mob_image %}"
            {% endif %}     
            >
            {% endif %}
            <div class="offer-nohuman-rights">
              {% if section.settings.normaltitle != blank %}
              <span class="offer-purchaser-txt">{{ section.settings.normaltitle }}</span>
              {% endif %}

              {% if section.settings.title_image != blank %}
                <span class="nohuman-rights-logo">
                  <img class="lazyload" data-src="{{ section.settings.title_image | img_url: '392x40' }}" src="{{ section.settings.title_image | img_url: '10x10' }}" alt="Cruelty Free Beauty" />
                </span>
              {% endif %}
            </div>
            {% if section.settings.button_label != blank and section.settings.button_link != blank %}
          	<div class="actions">
                <a href="{{ section.settings.button_link }}"> <span>{{ section.settings.button_label | escape }}</span> </a>
            </div>
            {% endif %}
          
            {% if section.settings.button_label2 != blank and section.settings.button_link2 != blank %}
            <div class="actions">
                <a href="{{ section.settings.button_link2 }}"> <span>{{ section.settings.button_label2 | escape }}</span> </a>
            </div>
            {% endif %}
        </div>
    </div>
</div>
