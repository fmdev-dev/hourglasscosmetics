<div class="pair-with-palette">
  
  {% if section.settings.title != blank %}
  <div class="pair-with-palette-title">{{ section.settings.title }}</div>
  {% endif %}     
  

  
	<div class="pair-with-palette-list">
      
		<div class="pair-with-palette-col col-first">
          
			<div class="pair-with-palette-img">
              {% if section.settings.desk_image1 != blank %}
              <img class="banner-desk-img lazyload" data-src="{{ section.settings.desk_image1 | img_url: 'master' }}" src="{{ section.settings.desk_image1 | img_url: '100x100' }}" alt="Hourglass Cosmetics"
                   {% if section.settings.desk_image1 %}
                   data-bgset="{% include 'bgset', image: section.settings.desk_image1 %}"
                   {% endif %}> 
              {% endif %}

              {% if section.settings.mob_image1 != blank %}
              <img class="banner-mob-img lazyload" data-src="{{ section.settings.mob_image1 | img_url: 'master' }}" src="{{ section.settings.mob_image1 | img_url: '100x' }}" alt="Hourglass Cosmetics"
                   {% if section.settings.mob_image1 %}
                   data-bgset="{% include 'bgset', image: section.settings.mob_image1 %}"
                   {% endif %}> 
              {% endif %}
			</div>
			<div class="pair-with-palette-content">
				  {% if section.settings.title1 != blank %}
              	<h3 class="title">{{ section.settings.title1 }}</h3>
              {% endif %}
			
			
               {% if section.settings.button_label1 != blank and section.settings.button_link1 != blank %}
             
                   <a href="{{ section.settings.button_link1 }}"> <span>{{ section.settings.button_label1 | escape }}</span> </a>
            
              {% endif %}
			</div>
          
		</div>
      
      
      
		<div class="pair-with-palette-col col-second">
			<div class="pair-with-palette-img">
				  {% if section.settings.desk_image2 != blank %}
              <img class="banner-desk-img lazyload" data-src="{{ section.settings.desk_image2 | img_url: 'master' }}" src="{{ section.settings.desk_image2 | img_url: '100x100' }}" alt="Hourglass Cosmetics"
                   {% if section.settings.desk_image2 %}
                   data-bgset="{% include 'bgset', image: section.settings.desk_image2 %}"
                   {% endif %}> 
              {% endif %}

              {% if section.settings.mob_image2 != blank %}
              <img class="banner-mob-img lazyload" data-src="{{ section.settings.mob_image2 | img_url: 'master' }}" src="{{ section.settings.mob_image2 | img_url: '100x' }}" alt="Hourglass Cosmetics"
                   {% if section.settings.mob_image2 %}
                   data-bgset="{% include 'bgset', image: section.settings.mob_image2 %}"
                   {% endif %}> 
              {% endif %}
			</div>
			<div class="pair-with-palette-content">
              
              {% if section.settings.title2 != blank %}
              	<h3 class="title">{{ section.settings.title2 }}</h3>
              {% endif %}
			
			
               {% if section.settings.button_label2 != blank and section.settings.button_link2 != blank %}
             
                   <a href="{{ section.settings.button_link2 }}"> <span>{{ section.settings.button_label2 | escape }}</span> </a>
            
              {% endif %}
              
			</div>
		</div>
      
		<div class="pair-with-palette-col col-three">
			<div class="pair-with-palette-img">
              {% if section.settings.desk_image3 != blank %}
              <img class="banner-desk-img lazyload" data-src="{{ section.settings.desk_image3 | img_url: 'master' }}" src="{{ section.settings.desk_image1 | img_url: '100x100' }}" alt="Hourglass Cosmetics"
                   {% if section.settings.desk_image3 %}
                   data-bgset="{% include 'bgset', image: section.settings.desk_image3 %}"
                   {% endif %}> 
              {% endif %}

              {% if section.settings.mob_image3 != blank %}
              <img class="banner-mob-img lazyload" data-src="{{ section.settings.mob_image3 | img_url: 'master' }}" src="{{ section.settings.mob_image1 | img_url: '100x' }}" alt="Hourglass Cosmetics"
                   {% if section.settings.mob_image3 %}
                   data-bgset="{% include 'bgset', image: section.settings.mob_image3 %}"
                   {% endif %}> 
              {% endif %}
			</div>
			<div class="pair-with-palette-content">
				  {% if section.settings.title3 != blank %}
              	<h3 class="title">{{ section.settings.title3 }}</h3>
              {% endif %}
			
			
               {% if section.settings.button_label3 != blank and section.settings.button_link3 != blank %}
             
                   <a href="{{ section.settings.button_link3 }}"> <span>{{ section.settings.button_label3 | escape }}</span> </a>
            
              {% endif %}
			</div>
          
		</div>
      
	</div>
</div>

