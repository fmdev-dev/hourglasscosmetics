<script>
  $( document ).ready(function() {
    setTimeout(function() {
      $(".ResetElements__Button-sc-8e6zl9-2").click(function(){
         var email = $("input[name='email']").val();
         var name = $("input[type='text']").val();
         if(email=="" || name==""){
         	$("#klavio-form").click();            
            $('html, body').animate(
              {
                scrollTop: $('#klavio-form').offset().top,
              },
              500,
              'linear'
            )
         }
      });  
    }, 3000);
   
  });    
</script>

