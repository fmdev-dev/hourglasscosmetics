<div class="page-width shopify-section product-detail-section">
  {% if section.settings.tab_title != blank %}
  <div class="tab-title">
    {{ section.settings.tab_title }}</div>           
  {% endif %}    
  		<div class="desktopproduct-section-nav">
         <div class="product-section-nav">
            <span class="section-tab-1 active" data="sec-1">BUILD YOUR PALETTE</span>
           <span class="section-tab-2" data="sec-2">PRE-CURATED PALETTES</span>
            <span class="section-tab-3" data="sec-3">EYESHADOW REFILLS</span>
         </div>
  </div>
         <div class="product-section-content">
            <div class="section-info">
               <div class="product-section-nav">
                  <span data="sec-1" class="">BUILD YOUR PALETTE</span>
               </div>
               <div id="sec-1" class="content contentshow">
                  <div class="build-your-palette gimage_with_rightcontent_section">
                    
                    {% if section.settings.desk_image != blank %}
                      <img class="banner-desk-img lazyload" data-src="{{ section.settings.desk_image | img_url: 'master' }}" src="{{ section.settings.desk_image | img_url: '100x100' }}" alt="{{ section.settings.title }}"
                      {% if section.settings.desk_image %}
                        data-bgset="{% include 'bgset', image: section.settings.desk_image %}"
                      {% endif %}> 
                    {% endif %}
                    <img class="banner-mob-img lazyload" data-src="{{ section.settings.mob_image | img_url: 'master' }}" src="{{ section.settings.mob_image | img_url: '100x100' }}" alt="{{ section.settings.title }}"
                       {% if section.settings.mob_image %}
                          data-bgset="{% include 'bgset', image: section.settings.mob_image %}"
                        {% endif %}> 
                                
                    <div class="banner-content right">
                        <div class="content-inner">               

                            {% if section.settings.title != blank %}
                            <div class="title">{{ section.settings.title }}</div>
                            
                            {% endif %}    

                            {% if section.settings.subtitle != blank %}
                            <div class="subtitle">{{ section.settings.subtitle }}</div>
                            {% endif %}           

                            {% if section.settings.button_label != blank and section.settings.button_link != blank %}
                            <div class="actions">
                                <a href="{{ section.settings.button_link }}"> <span>{{ section.settings.button_label | escape }}</span> </a>
                            </div>
                            {% endif %}

                        </div>
                    </div>                   
                 </div>
               </div>
              
               <div class="product-section-nav">
                  <span data="sec-2" class="">PRE-CURATED PALETTES</span>
               </div>
               <div id="sec-2" class="content pre-curated-tab" >
                 <div class="build-your-palette gimage_with_rightcontent_section">
                   <div>
                    {% if section.settings.pre-title != blank %}
                       <div class="title">{{ section.settings.pre-title }}</div>
                    {% endif %}  
                   
                    {% if section.settings.pre-subtitle != blank %}
                      <div class="subtitle">{{ section.settings.pre-subtitle }}</div>
                    {% endif %} 
                    </div>
                   <div class="pre-curated-cont">
                     <div class="content-inner-left">
                         {% if section.settings.pdesk_image != blank %}
                         <img class="banner-desk-img lazyload" data-src="{{ section.settings.pdesk_image | img_url: 'master' }}" src="{{ section.settings.pdesk_image | img_url: '100x100' }}" alt="{{ section.settings.ptitle }}"
                            {% if section.settings.pdesk_image %}
                                 data-bgset="{% include 'bgset', image: section.settings.desk_image %}"
                            {% endif %}> 
                        {% endif %}

                        <img class="banner-mob-img lazyload" data-src="{{ section.settings.pmob_image | img_url: 'master' }}" src="{{ section.settings.pmob_image | img_url: '100x100' }}" alt="{{ section.settings.ptitle }}"
                           {% if section.settings.pmob_image %}
                              data-bgset="{% include 'bgset', image: section.settings.pmob_image %}"
                            {% endif %}> 
                        {% if section.settings.ptitle != blank %}
                         <div class="title">{{ section.settings.ptitle }}</div>                  
                        {% endif %}    

                         {% if section.settings.pbutton_label != blank and section.settings.pbutton_link != blank %}
                           <div class="actions">
                              <a href="{{ section.settings.pbutton_link }}"> <span>{{ section.settings.pbutton_label | escape }}</span> </a>
                           </div>
                         {% endif %}      
                     </div>
                     <div class="content-inner-right"> 
                          	 {% if section.settings.cdesk_image != blank %}
                              <img class="banner-desk-img lazyload" data-src="{{ section.settings.cdesk_image | img_url: 'master' }}" src="{{ section.settings.cdesk_image | img_url: '100x100' }}" alt="{{ section.settings.ctitle }}"
                              {% if section.settings.cdesk_image %}
                                data-bgset="{% include 'bgset', image: section.settings.cdesk_image %}"
                              {% endif %}> 
                            {% endif %}
							
                          	<img class="banner-mob-img lazyload" data-src="{{ section.settings.cmob_image | img_url: 'master' }}" src="{{ section.settings.cmob_image | img_url: '100x100' }}" alt="{{ section.settings.ctitle }}"
                             {% if section.settings.cmob_image %}
                                data-bgset="{% include 'bgset', image: section.settings.cmob_image %}"
                            {% endif %}>
                          
                            {% if section.settings.ctitle != blank %}
                            <div class="title">{{ section.settings.ctitle }}</div>
                          	{% endif %}
                                     

                            {% if section.settings.cbutton_label != blank and section.settings.cbutton_link != blank %}
                            <div class="actions">
                                <a href="{{ section.settings.cbutton_link }}"> <span>{{ section.settings.cbutton_label | escape }}</span> </a>
                            </div>
                            {% endif %}

                        </div>
                   </div>
                    
                   
                                    
                 </div>
               </div>
