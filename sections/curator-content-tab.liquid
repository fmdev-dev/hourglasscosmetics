                      {% if section.settings.desk_image1 %}
                        data-bgset="{% include 'bgset', image: section.settings.desk_image %}"
                      {% endif %}> 
                    {% endif %}
                    <img class="banner-mob-img lazyload" data-src="{{ section.settings.mob_image1 | img_url: 'master' }}" src="{{ section.settings.mob_image1 | img_url: '100x100' }}" alt="{{ section.settings.title1 }}"
                       {% if section.settings.mob_image1 %}
                          data-bgset="{% include 'bgset', image: section.settings.mob_image1 %}"
                        {% endif %}> 
                   </div>
                                
                    <div class="banner-content right">
                        <div class="content-inner">               

                            {% if section.settings.title1 != blank %}
                            <div class="title">{{ section.settings.title1 }}</div>
                            
                            {% endif %}    

                            {% if section.settings.subtitle1 != blank %}
                            <div class="subtitle">{{ section.settings.subtitle1 }}</div>
                            {% endif %}           

                            {% if section.settings.button_label1 != blank and section.settings.button_link1 != blank %}
                            <div class="actions">
                                <a href="{{ section.settings.button_link1 }}"> <span>{{ section.settings.button_label1 | escape }}</span> </a>
                            </div>
                            {% endif %}

                        </div>
                    </div>                   
                 </div>
               </div>
            </div>
         </div>
      </div>

 <script>
   $( document ).ready(function() {
     //$('.section-info #sec-1').addClass('mobile-contentshow'); 
     $(".desktopproduct-section-nav .product-section-nav span:first").addClass('active');
      //$('.section-info #sec-1').addClass('contentshow');
      $(".desktopproduct-section-nav .product-section-nav span").click(function(){
          $(".product-section-nav span").removeClass('active');
        if ($(this).hasClass('active')) {
          $(this).removeClass('active');
        } else {
          $(this).addClass('active');
        }
          var dataArr = $(this).attr('data');
          $('.product-section-content .section-info .content').removeClass('contentshow mobile-contentshow');
        if ($('#'+dataArr).hasClass('contentshow')) {
          $('#'+dataArr).removeClass('contentshow');
        } else {
          $('#'+dataArr).addClass('contentshow');
        }
      });
    
    });
	$(document).on('click', '.product-section-content .product-section-nav span', function() {
		$(".product-section-nav span").not($(this)).removeClass('active');
        if ($(this).hasClass('active') == true) {
          $(this).removeClass('active');
        } else {
          $(this).addClass('active');   
        }
        var dataArr = $(this).attr('data');
        $('.product-section-content .section-info .content').not($('#'+dataArr)).removeClass('contentshow mobile-contentshow');
        if ($('#'+dataArr).hasClass('contentshow') == true) {
          $('#'+dataArr).removeClass('contentshow');
        } else {
          $('#'+dataArr).addClass('contentshow');
        }
	})
    
     jQuery(window).resize(function() {
            if (jQuery(window).width() < 767) {
                $('.product-section-content .section-info .content').removeClass('contentshow');
            }
            jQuery(window).trigger('resize')
        })
   
   
   </script>
