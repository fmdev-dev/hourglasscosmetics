<div class="bgimage_with_rightcontent_section fullheightblock ambient-banner red0_bgimage_with_content_section">
    
      {% if section.settings.desk_image != blank %}
      	<img class="banner-desk-img lazyload" data-src="{{ section.settings.desk_image | img_url: 'master' }}" src="{{ section.settings.desk_image | img_url: '100x100' }}" alt="Hourglass Cosmetics"
        {% if section.settings.desk_image %}
          data-bgset="{% include 'bgset', image: section.settings.desk_image %}"
        {% endif %}> 
      {% endif %}
  
    <div class="banner-content right">
        <div class="content-inner">  
          
           	{% if section.settings.logo %}
              <div class="logo_section">
                <img class="logo_image" src="{{ section.settings.logo | img_url: 'master' }}" style="width:240px" alt="Hourglass Cosmetics">
              </div>
            {% endif %}
          
          	{% if section.settings.description != blank %}
            <div class="description">{{ section.settings.description }}</div>
          	{% endif %} 
          
            {% if section.settings.button_label != blank and section.settings.button_link != blank %}
          	<div class="actions">
                <a href="{{ section.settings.button_link }}"> <span>{{ section.settings.button_label | escape }}</span> </a>
            </div>
            {% endif %}
          
            {% if section.settings.mob_image != blank %}
              <img class="banner-mob-img lazyload" data-src="{{ section.settings.mob_image | img_url: 'master' }}" src="{{ section.settings.mob_image | img_url: '100x100' }}" alt="Hourglass Cosmetics"
              {% if section.settings.mob_image %}
                data-bgset="{% include 'bgset', image: section.settings.mob_image %}"
              {% endif %}> 
            {% endif %}
          
        </div>
    </div>
</div>
{% schema %}
  {
    "name": {
      "en": "Red0 Image with Content"
    },
    "class": "index-section index-section--flush",
    "settings": [
	  {
        "type": "image_picker",
        "id": "desk_image",
        "label": {
          "en": "Desktop Image",
          "de": "Desktop Image",
          "fr": "Desktop Image"
        }
      },
	  {
        "type": "image_picker",
        "id": "mob_image",
        "label": {
          "en": "Mobile Image",
          "de": "Mobile Image",
          "fr": "Mobile Image"
        }
      },   
      {
        "type": "image_picker",
        "id": "logo",
        "label": {
          "en": "Logo",
          "de": "Logo",
          "fr": "Logo"
        }
      },
      {
           "type":"textarea",
           "id":"description",
           "label":{ 
              "en":"Description",
              "de":"Description",
              "fr":"Description"
           }
      },
      {
        "type": "text",
        "id": "button_label",
        "label": {
          "en": "Button label",
          "de": "Button-Etikett",
          "fr": "Texte du bouton"
        }
      },
      {
        "type": "url",
