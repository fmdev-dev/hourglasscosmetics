<div id="hero-unlocked-1-section" class="section unlocked-1-scn">
  <div class="left-section">
    <div class="content-inner">
      {% if section.settings.desk_image != blank %}
      <a href="{{ section.settings.button_link }}"><img class="banner-desk-img lazyload" data-src="{{ section.settings.desk_image | img_url: 'master' }}" src="{{ section.settings.desk_image | img_url: '100x100' }}" alt="Hourglass Cosmetics"></a>
      {% endif %}
    </div>
  </div>    
  <div class="right-section">
    <div class="banner-content">
      <div class="content-inner">
        {% if section.settings.heading != blank %}
        <h3 class="heading">{{ section.settings.heading | escape }}</h3>
        {% endif %}
        {% if section.settings.sub_heading != blank %}
        <div class="sub_heading">{{ section.settings.sub_heading | escape }}</div>
        {% endif %} 
        {% if section.settings.mob_image != blank %}
        <a href="{{ section.settings.button_link }}"><img class="banner-mob-img lazyload" data-src="{{ section.settings.mob_image | img_url: 'master' }}" src="{{ section.settings.mob_image | img_url: '100x100' }}" alt="Hourglass Cosmetics"></a>
        {% endif %}
        {% if section.settings.description != blank %}
        <div class="description">{{ section.settings.description }}</div>
        {% endif %}  
        {% if section.settings.button_label != blank and section.settings.button_link != blank %}
        <div class="actions">
          <a href="{{ section.settings.button_link }}">{{ section.settings.button_label | escape }}</a>
        </div>
        {% endif %}  
      </div>
    </div>
  </div>  
</div>

{% comment %}
<!--WITH FULL BACKGROUND IMAGE -->
<div id="hero-unlocked-1-section" class="section fullheightblock unlocked-1-scn">
  	{% if section.settings.desk_link != blank %}
    <a class="bannerbg" href="{{ section.settings.desk_link }}" >
      {% if section.settings.desk_image != blank %}
      	<img class="banner-desk-img lazyload" data-src="{{ section.settings.desk_image | img_url: 'master' }}" src="{{ section.settings.desk_image | img_url: '100x100' }}" alt="Hourglass Cosmetics"
        {% if section.settings.desk_image %}
          data-bgset="{% include 'bgset', image: section.settings.desk_image %}"
        {% endif %}
        >       
      	<img class="banner-mob-img lazyload" data-src="{{ section.settings.mob_image | img_url: 'master' }}" src="{{ section.settings.mob_image | img_url: '100x100' }}" alt="Hourglass Cosmetics"
        {% if section.settings.mob_image %}
          data-bgset="{% include 'bgset', image: section.settings.mob_image %}"
        {% endif %}
        > 
      {% endif %}
  	</a>
  	{% endif %}
    <a class="bannerbg" href="{{ section.settings.desk_link }}" >
      <div class="unlocked-1-container">
          <div class="banner-content">
              <div class="content-inner">
                  {% if section.settings.heading != blank %}
                  <h3 class="heading">{{ section.settings.heading | escape }}</h3>
                  {% endif %}
                  {% if section.settings.sub_heading != blank %}
                  <div class="sub_heading">{{ section.settings.sub_heading | escape }}</div>
                  {% endif %}  
                  <span class="underline"></span>
                  {% if section.settings.description != blank %}
                  <div class="description">{{ section.settings.description }}</div>
                  {% endif %}  
                  {% if section.settings.button_label != blank and section.settings.button_link != blank %}
                  <div class="actions">
                      <span>{{ section.settings.button_label | escape }}</span>
