<div class="how-build-custom-section">
	<div class="fixed-container">
		<div class="how-build-custom-lft">

          {% if section.settings.title != blank %}
          <h3 class="title">{{ section.settings.title }}</h3>
          {% endif %}  
          
          <div class="how-build-custom-rgt how-build-custom-mobile">
          
          <div class="mobile_view" width="100%" playsinline loop muted autoplay>  
               {% if section.settings.mobile_video_url != blank %}
                  <video class="bg-image mobile_view" width="100%" playsinline loop muted autoplay>  
                    <source src="{{ section.settings.mobile_video_url }}" type="video/mp4">  
                  </video>
               {% endif %}
              
            </div> 
			
		</div>
		
          
			<div class="how-build-custom-steps">
				<div class="steps-number">
					1
				</div>
              
              {% if section.settings.subtitle1 != blank %}
              <h4 class="subtitle">{{ section.settings.subtitle1 }}</h4>
              {% endif %}
          
              
				<div class="how-build-custom-img">
                  
                  {% if section.settings.desk_image1 != blank %}
                  <img class="banner-desk-img lazyload" data-src="{{ section.settings.desk_image1 | img_url: 'master' }}" src="{{ section.settings.desk_image1 | img_url: '100x100' }}" alt="Hourglass Cosmetics"
                       {% if section.settings.desk_image1 %}
                       data-bgset="{% include 'bgset', image: section.settings.desk_image1 %}"
                       {% endif %}> 
                  {% endif %}

                  {% if section.settings.mob_image1 != blank %}
                  <img class="banner-mob-img lazyload" data-src="{{ section.settings.mob_image1 | img_url: 'master' }}" src="{{ section.settings.mob_image1 | img_url: '100x' }}" alt="Hourglass Cosmetics"
                       {% if section.settings.mob_image1 %}
                       data-bgset="{% include 'bgset', image: section.settings.mob_image1 %}"
                       {% endif %}> 
                  {% endif %}
					
				</div>
			</div>
			<div class="how-build-custom-steps steps-2">
				<div class="steps-number">
					2
				</div>
              
              {% if section.settings.subtitle2 != blank %}
              <h4 class="title">{{ section.settings.subtitle2 }}</h4>
              {% endif %}
              
				
              
				<div class="how-build-custom-img">
                  
                   {% if section.settings.desk_image2 != blank %}
                  <img class="banner-desk-img lazyload" data-src="{{ section.settings.desk_image2 | img_url: 'master' }}" src="{{ section.settings.desk_image2 | img_url: '100x100' }}" alt="Hourglass Cosmetics"
                       {% if section.settings.desk_image2 %}
                       data-bgset="{% include 'bgset', image: section.settings.desk_image2 %}"
                       {% endif %}> 
                  {% endif %}

                  {% if section.settings.mob_image2 != blank %}
                  <img class="banner-mob-img lazyload" data-src="{{ section.settings.mob_image2 | img_url: 'master' }}" src="{{ section.settings.mob_image2 | img_url: '100x' }}" alt="Hourglass Cosmetics"
                       {% if section.settings.mob_image2 %}
                       data-bgset="{% include 'bgset', image: section.settings.mob_image2 %}"
                       {% endif %}> 
                  {% endif %}
					
				</div>
              
              
              {% if section.settings.button_label != blank and section.settings.button_link != blank %}
              <div class="how-build-stesp-action">
                <a href="{{ section.settings.button_link }}"> <span>{{ section.settings.button_label | escape }}</span> </a>
              </div>
              {% endif %}
			
              
			</div>
		</div>
		<div class="how-build-custom-rgt">
          <div class="desktop_view" width="100%">  
               {% if section.settings.desktop_video_url != blank %}
                  <video class="left_image desktop_view" width="100%" playsinline loop muted autoplay >  
                  <source src="{{ section.settings.desktop_video_url }}" type="video/mp4">
                  </video>
               {% endif %}

          </div>
			
		</div>
	</div>
</div>


