<script>  
window.getProductComparePrice=function(handle,line){
  $.ajax({
	url: handle + "&view=compareprice",
    async: false,
	success: function(data) {
      setTimeout(function(){ 
       $("#minicart_compare_price_"+line).html(data);
      }, 1000);
	}
  });
};
</script>

